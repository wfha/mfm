<%= image_tag @store.avatar_url.to_s if @store.avatar? %>
<br/><br/>

<%= simple_form_for(@store, :html => { :class => 'form-horizontal' }, :validate => true ) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :delivery_minimum %>
    <%= f.input :delivery_fee %>
    <%= f.input :delivery_radius %>
    <%= f.association :tags, :as => :check_boxes, :item_wrapper_class => 'inline' %>
    <%= f.association :payments, :as => :check_boxes, :item_wrapper_class => 'inline' %>
    <%= f.input :avatar %>

    <%= f.fields_for :address do |builder| %>
        <%= builder.input :address1 %>
        <%= builder.input :address2 %>
        <%= builder.input :city %>
        <%= builder.input :state %>
        <%= builder.input :country, :as => :string %>
        <%= builder.input :zip %>
    <% end %>

    <%= f.button :submit %>
<% end %>
