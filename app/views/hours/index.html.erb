<div class="well">
  <h1>Listing hours</h1>

  <table class='table table-hover table-bordered'>
    <tr>
      <th>Name</th>
      <th>Open at</th>
      <th>Close at</th>
      <th>Store</th>
      <th colspan="3">Action</th>
    </tr>

    <% @hours.each do |hour| %>
        <tr>
          <td><%= hour.name %></td>
          <td><%= hour.open_at %></td>
          <td><%= hour.close_at %></td>
          <td><%= hour.hourable.name %></td>
          <td><%= link_to 'Show', [@store, hour] %></td>
          <td><%= link_to 'Edit', edit_store_hour_path(@store, hour) %></td>
          <td><%= link_to 'Destroy', [@store, hour], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Hour', new_store_hour_path(@store) %>
</div>