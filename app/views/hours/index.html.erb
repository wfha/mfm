<h1>Listing hours</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Open at</th>
    <th>Close at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hours.each do |hour| %>
  <tr>
    <td><%= hour.name %></td>
    <td><%= hour.desc %></td>
    <td><%= hour.open_at %></td>
    <td><%= hour.close_at %></td>
    <td><%= link_to 'Show', hour %></td>
    <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
    <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

