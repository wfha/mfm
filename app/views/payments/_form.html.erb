<%= simple_form_for(@payment) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= image_tag @payment.avatar_url(:small).to_s if @payment.avatar? %>
    <%= f.input :avatar, as: :file %>
    <%= f.button :submit, 'Submit', class: 'btn btn-primary', disable_with: "Saving..." %>
<% end %>
