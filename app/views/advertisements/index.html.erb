<div class="well">
  <h1>Listing advertisements</h1>

  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Banner</th>
      <th>Target url</th>
      <th colspan="3">Actions</th>
    </tr>
    <% @advertisements.each do |advertisement| %>
        <tr>
          <td><%= advertisement.name %></td>
          <td><%= advertisement.desc %></td>
          <td><%= image_tag advertisement.banner_url(:micro).to_s %></td>
          <td><%= advertisement.target_url %></td>
          <td><%= link_to 'Show', advertisement %></td>
          <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
          <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />
  <%= link_to 'Back to Stores', stores_path, class: "btn btn-info" %>
  <%= link_to 'New Advertisement', new_advertisement_path, class: "btn btn-primary" %>
</div>
