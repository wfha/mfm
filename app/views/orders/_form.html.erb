<ul class="thumbnails" style="margin: 0px;">
  <li class="span6" style="margin: 0px;">
    <div class="thumbnail">
      <%= simple_form_for(@order, :validate => true, :html => { :style => "padding: 10px 15px;" } ) do |f| %>
          <%= f.error_notification %>
          <h4>Finish the order</h4>
          <%= f.input :note, :as => :text, :input_html => {:cols => 50, :rows => 2}, :placeholder => 'Special instructions', :label => false %>
          <%= f.fields_for :user do |builder| %>
              <%= builder.input :firstname, :placeholder => 'Firstname', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
              <%= builder.input :lastname, :placeholder => 'Lastname', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
              <%= builder.input :phone, :placeholder => 'Phone', :label => false %>
              <% if @cart.delivery_type == 'delivery' %>
                  <%= builder.fields_for :address do |addr| %>
                      <%= addr.input :address1, :placeholder => 'Address', :label => false %>
                      <%= addr.input :address2, :placeholder => 'Apt / Building / Suite', :label => false %>
                  <% end %>
              <% end %>
              <%= f.input :payment_type, collection: @order.payment_types, as: :radio, item_wrapper_class: 'inline', checked: @order.payment_types[0] %>

              <div id="tip_wrap" style="display: none;">
                <%= f.input :tip_rate, collection: Order::TIP_RATES, prompt: nil, label: 'Tip Rate', selected: Order::TIP_RATES[0], :wrapper_html => { :class => "sf_2_in_1" } %>
              </div>

              <div id="credit_card_wrap" style="display: none;">
                <% @order.store.payments.each do |p| %>
                    <%= image_tag p.image_url(:micro).to_s if p.image? %>
                <% end %>
                <%= f.input :card_number, label: false, placeholder: "Credit Card Number" %>
                <%= f.input :card_verification, label: false, placeholder: "CVV Code" %>
                <%= f.input :card_expires_on, :as => :date, :wrapper_html => { :class => "sf_2_in_1" },
                            :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :order => [:month, :year] %>
              </div>

              <% unless user_signed_in? %>
                  <br/>
                  <h4>Get an account (Optional)</h4>
                  <%= builder.input :email, :placeholder => 'Email', :label => false, :validate => false %>
                  <%= builder.input :password, :placeholder => 'Password', :label => false, :wrapper_html => { :class => "sf_2_in_1" }, :validate => false %>
                  <%= builder.input :password_confirmation, :placeholder => 'Confirmation', :label => false, :wrapper_html => { :class => "sf_2_in_1" }, :validate => false %>
              <% end %>
          <% end %>

          <br/>
          <%= f.input :store_id, :as => :hidden %>
          <%= f.input :cart_id, :as => :hidden %>
          <%= f.button :submit, :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </li>
  <li class="span6">
    <% unless user_signed_in? %>
        <div class="thumbnail">
          <%= simple_form_for("user", :url => user_session_path, :html => { :style => "padding: 10px 15px;" }) do |f| %>
              <h4>Already has an account?</h4>
              <%= f.input :email, :placeholder => 'Email', :label => false %>
              <%= f.input :password, :placeholder => 'Password', :label => false %>
              <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => 'Remember me' %>
              <%= f.button :submit, 'Sign in', :class => 'btn btn-primary' %>

              <br/><br/>
              <%= link_to "Forgot your password?", new_password_path('user') %>
          <% end %>
        </div>
    <% end %>
  </li>
</ul>