<% if cart_item == @current_item %>
    <li id="current_item">
<% else %>
    <li>
<% end %>
<%= link_to cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, remote: true  do %>
    <%= cart_item.dish.name %>
    <span class="pull-right">
      &times; <%= cart_item.quantity %>
      &nbsp;&nbsp;&nbsp;
      <%= number_to_currency(cart_item.total_price) %>
      <i class="icon-remove"></i>
    </span>
    <br/>
    <%= cart_item.note %>
<% end %>
</li>