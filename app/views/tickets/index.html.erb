<div class="well">
  <h1>Listing tickets</h1>

  <table class="table table-bordered">
    <tr>
      <th>Time</th>
      <th>Email</th>
      <th>Content</th>
      <th colspan="3">Action</th>
    </tr>

    <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.created_at.strftime("%Y-%m-%d %H:%M %P") %></td>
          <td><%= ticket.email %></td>
          <td><%= ticket.content %></td>
          <td><%= link_to 'S', ticket %></td>
          <td><%= link_to 'E', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'D', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />
  <%= link_to 'Back to Stores', stores_path, class: "btn btn-info" %>
  <%= link_to 'New Ticket', new_ticket_path, class: "btn btn-primary" %>
</div>