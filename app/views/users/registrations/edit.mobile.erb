<div data-role="content" data-inset="false" class="ui-body ui-body-e">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                      html: { method: :put, data: { ajax: false }, class: 'hide_input_label' }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'Email' %>
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= f.input :firstname, :placeholder => 'Firstname' %></div>
        <div class="ui-block-b"><%= f.input :lastname, :placeholder => 'Lastname' %></div>
      </div>
      <%= f.input :phone, :placeholder => 'Phone' %>
      <%= f.fields_for :address do |addr| %>
          <%= addr.input :address1, :placeholder => 'Address' %>
          <div class="ui-grid-a">
            <div class="ui-block-a"><%= addr.input :address2, :placeholder => 'Apt / Building / Suite' %></div>
            <div class="ui-block-b"><%= addr.input :city, :placeholder => 'City' %></div>
          </div>
      <% end %>
      <br/>
      <i>Leave blank if you don't want to change password.</i>
      <br />
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= f.input :password, :autocomplete => "off", :placeholder => 'Password' %></div>
        <div class="ui-block-b"><%= f.input :password_confirmation, :placeholder => 'Confirmation' %></div>
      </div>
      <%= f.input :current_password, :placeholder => 'Current Password' %>
      <br/>
      <%= f.button :submit, "Update" %>
  <% end %>

  <br/><hr/>
  <div class="ui-grid-a">
    <div class="ui-block-a">
      <%= link_to "to Stores", home_stores_path, data: { role: 'button' }, rel: 'external' %>
    </div>
    <div class="ui-block-b">
      <%= link_to "to Grocery", home_grocery_path, data: { role: 'button' }, rel: 'external' %>
    </div>
  </div>

</div><!-- /content -->
