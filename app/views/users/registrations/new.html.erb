<div class="row-fluid">
  <div class="span4 well">
    <%= image_tag "/assets/mfm_logo.png" %>
    <h4>Sign up</h4>
    <br/>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                        :validate => true, :html => { :class => 'hide_input_label' } ) do |f| %>
        <%= f.error_notification %>
        <%= f.input :firstname, :placeholder => 'Firstname', :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :lastname, :placeholder => 'Lastname', :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :email, :placeholder => 'Email' %>
        <%= f.input :password, :placeholder => 'Password', :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :password_confirmation, :placeholder => 'Confirmation', :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :phone, as: :hidden, input_html: { value: '000000000' } %>
        <br/>
        <%= f.button :submit, 'Sign up', :class => "btn btn-primary", :disable_with => "Please wait..."  %>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
