<div class="row-fluid">
  <div class="span4 well">
    <%= image_tag "/assets/mfm_logo.png" %>
    <h4>Sign up</h4>
    <br/>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true ) do |f| %>
        <%= f.error_notification %>
        <%= f.input :firstname, :placeholder => 'Firstname', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :lastname, :placeholder => 'Lastname', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :email, :placeholder => 'Email', :label => false %>
        <%= f.input :password, :placeholder => 'Password', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :password_confirmation, :placeholder => 'Confirmation', :label => false, :wrapper_html => { :class => "sf_2_in_1" } %>
        <%= f.input :phone, as: :hidden, input_html: { value: '000000000' } %>
        <br/>
        <%= f.button :submit, 'Sign up', :class => "btn btn-primary" %>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
