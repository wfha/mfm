<div class="row-fluid">
  <div class="span8 well">
    <table width="100%">
      <tr>
        <th colspan="2">
          <%= image_tag "/assets/mfm_logo.png" %>
          <br/>
          <h3>Sign Up with</h3>
        </th>
      </tr>
      <tr>
        <td width="50%">
          <% if resource.errors.any? %>
              <div id="error_explanation">
                <b><%= pluralize(resource.errors.count, "error") %> prohibited this plan from being saved:</b>
                <ul>
                  <% resource.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                              :validate => true, :html => { :class => 'hide_input_label' } ) do |f| %>
              <%= f.error_notification %>
              <%= f.input :firstname, :placeholder => 'Firstname', :wrapper_html => { :class => "sf_2_in_1" } %>
              <%= f.input :lastname, :placeholder => 'Lastname', :wrapper_html => { :class => "sf_2_in_1" } %>
              <%= f.input :email, :placeholder => 'Email' %>
              <%= f.input :password, :placeholder => 'Password', :wrapper_html => { :class => "sf_2_in_1" } %>
              <%= f.input :password_confirmation, :placeholder => 'Confirmation', :wrapper_html => { :class => "sf_2_in_1" } %>
              <br/>
              <%= f.button :submit, 'Sign up', :class => "btn btn-primary", :disable_with => "Please wait..."  %>
          <% end %>
        </td>
        <td width="50%" id="social_media_sign_in">
          <%= link_to user_omniauth_authorize_path(:facebook), style: "background-color: #3b5998;" do %>
              <%= image_tag '/assets/facebook_100x100.png' %>
              Sign in with Facebook
          <% end %>
          <%= link_to user_omniauth_authorize_path(:google_oauth2), style: "background-color: #d84a38;" do %>
              <%= image_tag '/assets/google_100x100.png' %>
              Sign in with Google+
          <% end %>
          <!--<%= link_to user_omniauth_authorize_path(:facebook), style: "background-color: #29c5f6;" do %>-->
              <!--<%= image_tag '/assets/twitter_100x100.png' %>-->
              <!--Sign in with Twitter-->
              <!--<% end %>-->
        </td>
      </tr>
    </table>

    <br/><br/>
    <%= render "users/shared/links" %>
  </div>
</div>
