<%= simple_form_for([@store, @coupon]) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :rank %>

    <%= image_tag @coupon.photo_url(:micro).to_s if @coupon.photo? %>
    <%= f.input :photo %>

    <%= f.input :start_at, wrapper_html: { class: "sf_2_in_1" } %>
    <%= f.input :end_at, wrapper_html: { class: "sf_2_in_1" } %>

    <br/>

    <%= f.button :submit, disable_with: "Saving...", class: 'btn btn-primary' %>
<% end %>