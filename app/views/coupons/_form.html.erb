      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :start_at %><br />
      <%= f.datetime_select :start_at %>
    </div>
    <div class="field">
      <%= f.label :end_at %><br />
      <%= f.datetime_select :end_at %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>