<%= hidden_ul_if(cart.cart_items.empty?, :data => { :role => "listview"} ) do %>
    <li>
      <div class="ui-grid-a">
        <div class="ui-block-a" style="width: 35%;">
          <h1 style="text-align: right;padding: 3px 15px 0px 0px;">Type:</h1>
        </div>
        <div class="ui-block-b" style="width: 65%;">
          <div data-role="controlgroup" data-type="horizontal" data-mini="true" class="button-glyphish">
            <% if cart.delivery_type == 'Delivery' %>
                <%= link_to 'Delivery', home_change_cart_delivery_type_path(delivery_type: :Delivery), data: {role: 'button', theme: 'b'}, remote: true %>
                <%= link_to 'Pick Up', home_change_cart_delivery_type_path(delivery_type: :PickUp), data: {role: 'button', theme: 'a'}, remote: true %>
            <% else %>
                <%= link_to 'Delivery', home_change_cart_delivery_type_path(delivery_type: :Delivery), data: {role: 'button', theme: 'a'}, remote: true %>
                <%= link_to 'Pick Up', home_change_cart_delivery_type_path(delivery_type: :PickUp), data: {role: 'button', theme: 'b'}, remote: true %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
    <%= render(cart.cart_items) %>
    <li style="text-align: right;font-size: 13px;">
      Subtotal: <span class="pull-right"><%= number_to_currency(cart.total_price) %></span><br/>
      Tax: <span class="pull-right"><%= number_to_currency(cart.total_price*0.0825) %></span><br/>
      Delivery Fee: <span class="pull-right"><%= number_to_currency(cart.store.delivery_fee) %></span><br/>
      Total: <span class="pull-right"><%= number_to_currency(cart.total_price*1.0825 + cart.store.delivery_fee) %></span>
    </li>
    <li>
      <div class="ui-grid-a">
        <div class="ui-block-a">
          <%= link_to 'Proceed', new_order_path, data: { role: "button", mini: true }, rel: 'external' %>
        </div>
        <div class="ui-block-b">
          <%= link_to 'Empty cart', cart, :data => { :role => "button", :mini => true },
                      :remote => true, method: :delete, confirm: 'Are you sure?' %>
        </div>
      </div>
    </li>
<% end %>