<h1>Listing dishes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Price</th>
    <th>Image</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.name %></td>
    <td><%= dish.desc %></td>
    <td><%= dish.price %></td>
    <td><%= dish.image %></td>
    <td><%= dish.category %></td>
    <td><%= link_to 'Show', dish %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

