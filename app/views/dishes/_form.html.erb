<%= simple_form_for([@category, @dish], :html => { :multipart => true }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.association :dish_features, as: :check_boxes, item_wrapper_class: 'inline' %>
    <%= f.association :dish_choices, as: :check_boxes, item_wrapper_class: 'inline' %>
    <%= f.input :price, as: :string %>
    <%= image_tag @dish.photo_url(:small).to_s if @dish.photo? %>
    <%= f.input :photo %>

    <%= f.button :submit, 'Submit', class: 'btn btn-primary', :disable_with => "Saving..." %>
<% end %>