<h1>Listing plans</h1>

<table class='table table-hover table-bordered'>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Image</th>
    <th>Store</th>
    <th colspan="3">Action</th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.desc %></td>
    <td><%= image_tag plan.image_url(:small).to_s if plan.image? %></td>
    <td><%= plan.store.name %></td>
    <td><%= link_to 'Show', [@store, plan] %></td>
    <td><%= link_to 'Edit', edit_store_plan_path(@store, plan) %></td>
    <td><%= link_to 'Destroy', [@store, plan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Plan', new_store_plan_path(@store) %>
