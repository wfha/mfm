<% content_for :north do %>
    <div class="row-fluid">
      <div class="span3">
        <%= image_tag @store.image_url(:small).to_s %>
      </div>
      <div class="span9">
        <h1><%= @store.name %></h1>
        <p><%= @store.address.address1 %></p>
        <p><%= @store.phone %> | <%= @store.fax %> | <%= link_to 'Back to Restaurant List', home_stores_path %></p>
        <br/>
        <ul class="nav nav-tabs first_child_active">
          <li><a href="#whats_good">What's Good</a></li>
          <li><a href="#full_menu">Full Menu</a></li>
          <li><a href="#store_info">Store Info</a></li>
          <li><a href="#store_reviews">Store Reviews</a></li>
        </ul>
      </div>
    </div>
    <br/>
<% end %>

<div id="modal_wrap"></div>

<div class="tab-content first_child_active">
  <div class="tab-pane" id="whats_good">
    <ul class="thumbnails">
      <% @store.menus.each do |menu| %>
          <% menu.categories.each do |category| %>
              <% category.dishes.each do |dish| %>
                  <li class="span4">
                    <div class="thumbnail">
                      <%= image_tag dish.image_url.to_s  %>
                      <div class="caption">
                        <%= dish.name %><i class="pull-right"><%= number_to_currency(dish.price) %></i>
                        <p><%= sanitize(dish.desc) %></p>
                        <%= button_to 'Order', home_dish_modal_path(dish), :remote => true, :class => 'pre_order btn btn-primary btn-mini' %>
                      </div>
                    </div>
                  </li>
              <% end %>
          <% end %>
      <% end %>
    </ul>
  </div>
  <div class="tab-pane" id="full_menu">
    <ul class="nav nav-tabs first_child_active">
      <% @store.menus.each do |menu| %>
          <li>
            <a href="#menu_<%= menu.id %>">
              <%= menu.name %>
              <br/>
              <%= menu.desc %>
            </a>
          </li>
      <% end %>
    </ul>

    <div class="tab-content first_child_active">
      <% @store.menus.each do |menu| %>
          <div class="tab-pane" id="menu_<%= menu.id %>">
            <% menu.categories.each do |category| %>
                <section id="<%= category.name %>">
                  <h4><%= category.name %> | <%= category.desc %></h4>
                  <ul class="thumbnails">
                    <% category.dishes.each do |dish| %>
                        <li class="span6">
                          <%= link_to home_dish_modal_path(dish), :remote => true do %>
                              <div class="thumbnail" rel="popover" title="<%= dish.name %>" data-content="<%= sanitize(dish.desc) %>">
                                <%= dish.name %> -
                                <% dish.dish_features.each do |df| %>
                                    <%= df.name %>
                                <% end %>
                                <i class="pull-right"><%= number_to_currency(dish.price) %></i>
                              </div>
                          <% end %>
                        </li>
                    <% end %>
                  </ul>
                </section>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="store_info">
    <div class="hero-unit">
      <h2><%= @store.name %></h2>
      <p><%= @store.address.address1 %></p>
      <p>Phone: <%= @store.phone %> | Fax: <%= @store.fax %></p>
      <br/>
      <p>Hours:</p>
      <ul>
        <% @store.hours.each do |h| %>
            <li><%= h.name %>: <%= h.open_at %> - <%= h.close_at %></li>
        <% end %>
      </ul>
      <p>Tags:</p>
      <span>
        <% @store.tags.each do |t| %>
            <%= t.name %>
        <% end %>
      </span>
      <p>Payments:</p>
       <span>
        <% @store.payments.each do |p| %>
             <%= p.name %>
             <%= image_tag p.image_url(:micro).to_s if p.image? %>
        <% end %>
      </span>
      <p><%= link_to 'View Menu', home_store_path(@store), :class => 'btn btn-primary btn-large' %></p>
    </div>
  </div>
  <div class="tab-pane" id="store_reviews">
    <%= image_tag "/assets/yelp_logo.png" %>
    <% unless @reviews.empty? %>
        <h5><%= @reviews[0]['name'] %></h5>
        <%= image_tag @reviews[0]['rating_img_url'] %> <%= @reviews[0]['review_count'] %> reviews
        <hr/>
        <% @reviews[0]['reviews'].each do |review| %>
            <%= image_tag review['user_photo_url_small'], :width => 20, :height => 20 %>
            <%= review['user_name'] %>
            <%= image_tag review['rating_img_url'] %>
            <br/>
            <%= review['text_excerpt'] %> <%= link_to 'Read more', review['url'] %>
            <hr/>
        <% end %>
    <% end %>
  </div>
</div>

<% content_for :east do %>
    <div class="well sidebar-nav" id="cart">
      <% if @cart %>
          <%= render @cart %>
      <% else %>
          The Cart Is Empty!
      <% end %>
    </div><!--/.well -->
<% end %>