<div class="well">
  <div class="row-fluid">
    <div class="span3">
      <%= image_tag @store.avatar_url.to_s, :width => '100%' %>
    </div>
    <div class="span6">
      <br/>
      <h1><%= @store.name %></h1>
      <br/>
      <h4>All grocery will be picked up at nearest supermarket (HEB, Kroger, or Walmart) and deliveryed to you directly.</h4>
      <br/>
      <h4>We are coming soon, please return and check later.</h4>
    </div>
  </div>
</div>

<div class="row">
  <div class="span8" id="main">
    <div class="well">
      <div class="row-fluid">
        <ul class="thumbnails">
          <% @dishes.each do |dish| %>
              <li class="span4">
                <div class="thumbnail">
                  <%= image_tag dish.photo_url(:small).to_s  %>
                  <div class="caption">
                    <b><%= dish.name %></b>
                    <% dish.dish_features.each do |df| %>
                        <div style="width: 16px;height: 16px;margin-right: 4px;" class="pull-right icons_dish_features-dish_feature_<%= df.name %>"></div>
                    <% end %>
                    <% if @still_open %>
                        <%= button_to number_to_currency(dish.price), home_dish_modal_path(dish), :remote => true, :class => 'pre_order btn btn-primary pull-right' %>
                    <% else %>
                        <%= button_to number_to_currency(dish.price), "javascript:alert('The store is closed!');", :class => 'btn btn-inverse pull-right' %>
                    <% end %>
                    <i><%= sanitize(dish.desc) %></i>
                  </div>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="well" id="side">
      <div id="cart"><%= render @cart %></div>
      <div id="modal_wrap"></div>
    </div>
  </div>
</div><!--/row-->
