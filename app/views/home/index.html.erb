<div class="row-fluid">
  <div class="span12 well">
    <div class="span5">
      <%= image_tag "/assets/mfm_logo.png" %>
      <h3 class="pull-right">Get your meals online! ^_^</h3>
    </div>
    <div class="span3 offset1">
      <%= link_to "https://chrome.google.com/webstore/detail/meals4me/miinanihaigjbhiekjadnmagbfcmcmdp", target: "_blank", style: "text-decoration: none;" do %>
          <%= image_tag("/assets/mfm_chrome.png", style: "width: 160px; height: 120px;") %>
          <br/>
          <span class="badge badge-important">Get Meals4.Me on Chrome!</span>
      <% end %>
