<div class="row-fluid">
  <div class="span12 well">
    <div class="span6">
      <%= image_tag "/assets/mfm_logo.png" %>
      <h4>Starving, and a little lazy ... </h4>
      <h4 class="pull-right">Tired of grocery shopping, delivery would be nice ... </h4>
      <h4>Order food online easily, no hassle on the phone</h4>
      <h4 class="pull-right">Find more amazing restaurants in town!</h4>
    </div>
    <div class="span4">
      <h4><%= Date.today %>. Be Happy Everyday!</h4>
      <p>Wicked Table Tennis Play</p>
      <img src="https://i.chzbgr.com/maxW500/7080178176/h5AE5EA9F/" />
    </div>
    <div class="span2">
      <div id="weather"></div>
    </div>
  </div>

  <ul class="thumbnails">
    <li class="span4">
      <div class="thumbnail index_img_wrap">
        <%= link_to home_stores_path, :style => 'text-align:center;background-color:#ffffff;display:block;' do %>
            <%= image_tag "/assets/hub.jpg" %>
            <h3>Restaurant Hub</h3>
        <% end %>
      </div>
    </li>
    <li class="span4">
      <div class="thumbnail index_img_wrap">
        <%= link_to home_delivery_path, :style => 'text-align:center;background-color:#ffffff;display:block;' do %>
            <%= image_tag "/assets/food_delivery.jpg" %>
            <h3 style="background: #154ecd;box-shadow: inset 0px 1px 2px #154ecd, 0px 1px 0px white;">Restaurant Delivery</h3>
        <% end %>
      </div>
    </li>
    <li class="span4">
      <div class="thumbnail index_img_wrap">
        <%= link_to home_grocery_path, :style => 'text-align:center;background-color:#ffffff;display:block;' do %>
            <%= image_tag "/assets/grocery_delivery.jpg" %>
            <h3 style="background: #32cd32;box-shadow: inset 0px 1px 2px #32cd32, 0px 1px 0px white;">Grocery Delivery</h3>
        <% end %>
      </div>
    </li>
  </ul>
</div>