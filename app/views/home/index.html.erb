            <h3 style="background: #154ecd;box-shadow: inset 0px 1px 2px #154ecd, 0px 1px 0px white;">Restaurant Delivery</h3>
        <% end %>
      </div>
    </li>
    <li class="span4">
      <div class="thumbnail index_img_wrap">
        <%= link_to home_coupons_path, :style => 'text-align:center;background-color:#ffffff;display:block;' do %>
            <%= image_tag "/assets/restaurant_coupons.jpg" %>
            <h3 style="background: #32cd32;box-shadow: inset 0px 1px 2px #32cd32, 0px 1px 0px white;">Restaurant Coupons</h3>
