<div class="well">

  <h1>Grocery Orders:</h1>
  <table class='table table-hover table-bordered'>
    <tr>
      <th>ID</th>
      <th>Store</th>
      <th>User</th>
      <th>Payment</th>
      <th>Fee</th>
      <th>Tip</th>
      <th>Order Time</th>
      <th>Note</th>
      <th>Action</th>
    </tr>

    <% @g_orders.each do |order| %>
        <tr<% unless order.handled %> style="background-color: #FFFFFF;"<% end %> id="order_<%= order.id %>">
          <td><%= order.id %></td>
          <td><%= order.cart.delivery_type %>@<%= order.store.name %></td>
          <td><%= order.user.phone %> / <%= order.user.firstname %> <%= order.user.lastname %></td>
          <td><%= order.payment_type %>(<%= order.payment_status %>)</td>
          <td><%= order.cart.delivery_fee %></td>
          <td><%= order.tip %></td>
          <td><%= order.created_at.strftime("%m/%d/%Y %H:%M%p") %></td>
          <td><%= order.note %></td>
          <td>
            <%= link_to "Details", home_order_modal_path(order), remote: true, disable_with: "......", class: "btn btn-info" %>
            <%= link_to "Handle", home_handle_order_path(order, handled: true), remote: true, disable_with: "......", class: "btn btn-primary" %>
            <%= link_to "Undo", home_handle_order_path(order, handled: false), remote: true, disable_with: "......", class: "btn btn-primary" %>
          </td>
        </tr>
    <% end %>
  </table>

