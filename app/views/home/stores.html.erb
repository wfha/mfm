<div class="row-fluid">
  <div class="span7 well" id="main">
    <table class="table table-hover">
      <% @stores.each do |store| %>
          <tr>
            <td>
              <%= image_tag store.image_url(:small).to_s %>
            </td>
            <td>
              <div>
                <h4><%= store.name %></h4>
                <p><%= store.address.address1 %></p>
                <p><%= store.phone %> | <%= store.fax %></p>
                <%= link_to 'View Menu', home_store_good_path(store), :class => 'btn btn-info' %>
              </div>
            </td>
            <td>
              <br/>
              <%= link_to 'What\'s Good', home_load_store_good_path(store), remote: true, class: 'load_trigger btn btn-warning btn-block' %>
              <%= link_to 'Yelp Review', home_load_store_reviews_path(store), remote: true, class: 'load_trigger btn btn-warning btn-block' %>
              <%= link_to 'Information', home_load_store_info_path(store), remote: true, class: 'load_trigger btn btn-warning btn-block' %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>

  <div class="span5" id="side">
    <%= gmaps(
                :map_options => { :auto_adjust => true },
                :markers => { :data => @json, :options => { :list_container => "markers_list" }}
        )
    %>
    <br/>
    <ul id="markers_list"></ul>
  </div>
</div><!--/row-->

<!-- Click Button To Load Information With The Store -->
<div class="well" id="load_box_wrap">
  <a class="close" href="javascript:;">x&nbsp;</a>
  <div class="well" id="load_box"></div>
</div>