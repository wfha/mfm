<div data-role="content" data-inset="false">
  <%= render 'store_header' %>

  <ul data-role="listview" data-inset="true">
    <% @dishes.each do |dish| %>
        <li>
          <% if @still_open %>
              <%= link_to home_dish_modal_path(dish), :remote => true do %>
                  <%= image_tag dish.photo_url(:small).to_s, :width => 100, :height => 100 %>
                  <h3><%= dish.name %></h3>
                  <p><%= number_to_currency dish.price %></p>
              <% end %>
          <% else %>
              <%= link_to "javascript: alert('The store is closed');" do %>
                  <%= image_tag dish.photo_url(:small).to_s, :width => 100, :height => 100 %>
                  <h3><%= dish.name %></h3>
                  <p><%= number_to_currency dish.price %></p>
              <% end %>
          <% end %>
        </li>
    <% end %>
  </ul>

  <div id="modal_wrap"></div>
</div><!-- /content -->
