<div data-role="page" id="page1" data-theme="e">
  <%= render 'header' %>

  <div data-role="content">
    <%= render 'store_header' %>

    <ul data-role="listview" data-inset="true" data-filter="true" data-dividertheme="c">
      <% @store.menus.each do |menu| %>
          <% menu.categories.each do |category| %>
              <li data-role="list-divider"><%= category.name %></li>
              <% category.dishes.each do |dish| %>
                  <li><a href="#page1"><%= dish.name %><span class="ui-li-count">11</span></a></li>
              <% end %>
          <% end %>
      <% end %>
    </ul>
  </div><!-- /content -->

  <%= render 'footer' %>
</div>

