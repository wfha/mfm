<div data-role="page" id="page1" data-theme="e">
  <%= render 'header' %>

  <div data-role="content">
    <ul data-role="listview" data-split-icon="gear" data-split-theme="d" data-filter="true">
      <% @stores.each do |store| %>
          <li>
            <a href="/home/store/<%= store.id %>">
              <img src="<%= store.image_url(:small).to_s %>" width="100" height="100" />
              <h3><%= store.name %></h3>
              <p><%= store.desc %></p>
              <span class="ui-li-count">11</span>
            </a>
          </li>
      <% end %>
    </ul>
  </div><!-- /content -->

  <%= render 'footer' %>
</div><!-- /page -->