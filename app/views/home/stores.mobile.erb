<div data-role="content">
  <ul data-role="listview" data-split-icon="gear" data-split-theme="d" data-filter="true">
    <% @stores.each do |store| %>
        <li>
          <%= link_to home_store_good_path(store), rel: 'external' do %>
              <img src="<%= store.image_url(:small).to_s %>" width="100" height="100" />
              <h3><%= store.name %></h3>
              <p><%= store.desc %></p>
              <span class="ui-li-count">11</span>
          <% end %>
        </li>
    <% end %>
  </ul>
</div><!-- /content -->
