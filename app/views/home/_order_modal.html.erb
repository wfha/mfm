<div class="modal hide fade">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">&times;</button>
    <h4>
      <%= @order.cart.delivery_type %>@<%= @order.store.name %>
      <span class="pull-right">
        Pay with <%= @order.payment_type %>(<%= @order.payment_status %>)
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      </span>
    </h4>
  </div>
  <div class="modal-body">
    <table class="table">
      <% @order.cart.cart_items.each do |ci| %>
          <tr>
            <td width="200"><%= ci.name %></td>
            <td width="200"><%= ci.note %></td>
            <td width="50"><%= ci.quantity %></td>
            <td width="50"><%= number_to_currency ci.total_price %></td>
          </tr>
      <% end %>
      <tr> <td colspan="4"><b>Note:</b> <%= @order.note %></td>                                                 </tr>
      <tr> <td colspan="2"></td><td>Subtotal:</td><td><%= number_to_currency @order.cart.subtotal_price %></td> </tr>
      <tr> <td colspan="2"></td><td>Tax:</td>     <td><%= number_to_currency @order.cart.tax %></td>            </tr>
      <tr> <td colspan="2"></td><td>Total:</td>   <td><%= number_to_currency @order.cart.total_price %></td>    </tr>
    </table>
    <h4>Tip: <%= @order.tip %></h4>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">Close</button>
  </div>
</div>