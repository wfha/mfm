<div class="well">
  <h1>Listing categories</h1>

  <table border="1">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Menu</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.desc %></td>
          <td><%= category.menu.name %></td>
          <td><%= link_to 'Show', [@menu, category] %></td>
          <td><%= link_to 'Edit', edit_menu_category_path(@menu, category) %></td>
          <td><%= link_to 'Destroy', [@menu, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Category', new_menu_category_path %>
</div>