<div class="well">
  <h1>Listing services</h1>

  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.desc %></td>
          <td><%= link_to 'Show', service %></td>
          <td><%= link_to 'Edit', edit_service_path(service) %></td>
          <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />
  <%= link_to 'Back to Stores', stores_path, class: "btn btn-info" %>
  <%= link_to 'New Service', new_service_path, class: "btn btn-primary" %>
</div>